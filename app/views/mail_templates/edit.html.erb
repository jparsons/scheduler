<h2>Editing <%= @mail_template.name %></h2>

<% form_for(@mail_template) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @mail_template %> |
<%= link_to 'Back to list of templates', mail_templates_path %>